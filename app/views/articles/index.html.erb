<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Articles</h1>

  <table class="table-bordered">
    <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% if @articles.present? %>
      <% @articles.each do |article| %>
        <tr>
          <td><%= article.title %></td>
          <td><%= markdown(article.body) %></td>
          <td><%= link_to 'Show', article, class: "btn btn-primary" %></td>
          <td><%= link_to 'Edit', edit_article_path(article), class: "btn btn-success" %></td>
          <td><%= link_to 'Destroy', article, method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan="5">記事がありません</td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Article', new_article_path, class: "btn btn-primary" %>
</div>
