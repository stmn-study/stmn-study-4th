<div class="container">
  <nav class="navbar navbar-expand-lg navbar-light">
    <a class="navbar-brand" href="#"><h1>記事一覧</h1></a>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">

      </ul>
      <form class="form-inline my-2 my-lg-0">
        <%= link_to '新しい記事', new_article_path, class: "btn btn-primary" %>
      </form>
    </div>
  </nav>

  <% if notice.present? %>
    <div class="alert alert-warning m-3" role="alert">
      <%= notice %>
    </div>
  <% end %>

  <% if @articles.present? %>
    <% @articles.each_slice(2) do |articles| %>
      <div class="mt-2 mb-2">
        <div class="row">
          <% articles.each do |article| %>
            <div class="col-sm-6">
              <div class="card">
                <h5 class="card-header"><%= article.title %></h5>
                <div class="card-body">
                  <p class="card-text"><%= markdown(article.body) %></p>
                  <%= link_to 'Show', article, class: "btn btn-primary" %>
                  <%= link_to 'Edit', edit_article_path(article), class: "btn btn-success" %>
                  <%= link_to 'Destroy', article, method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-danger" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
