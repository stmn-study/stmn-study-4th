<div class="container">
  <% if notice.present? %>
    <div class="alert alert-warning m-3" role="alert">
      <%= notice %>
    </div>
  <% end %>

  <div class="card">
    <h5 class="card-header"><%= @article.title %></h5>
    <div class="card-body">
      <p class="card-text"><%= markdown(@article.body) %></p>
    </div>
  </div>

  <%= link_to 'Edit', edit_article_path(@article) %> |
  <%= link_to 'Back', articles_path %>
</div>